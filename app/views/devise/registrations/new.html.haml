.content__section--intro
  .container-fluid.col-md-12
    = bootstrap_devise_error_messages!
    %h3.display-2
      = t('.sign_up', default: 'Sign up')
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
      .form-group
        = f.input :email, autofocus: true, class: 'form-control', placeholder: 'Email', label: false
      .form-group
        = f.input :name, placeholder: 'Name', label: false
      .form-group
        = f.input :affiliation, placeholder: 'Affiliation', label: false
      .form-group
        = f.input :position, placeholder: 'Position', label: false
      .form-group
        = f.input :password, class: 'form-control', placeholder: 'Password', label: false
      .form-group
        = f.input :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', label: false
      = f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary'
      = render 'devise/shared/links'
